<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/component_time_relay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/ground_02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/component_time_relay"
        tools:src="@drawable/component_time_relay" />

    <View
        android:id="@+id/ground_01"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:background="@color/conductor_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/ground_02"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/conductor_color"
        app:layout_constraintBottom_toTopOf="@+id/ground_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/conductor_node_width"
        android:layout_height="@dimen/conductor_node_width"
        android:background="@drawable/conductor_node"
        app:layout_constraintBottom_toBottomOf="@+id/ground_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ground_01" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@string/checkpoint_11_b"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/component_time_relay"
        app:layout_constraintEnd_toEndOf="@+id/component_time_relay"
        app:layout_constraintStart_toStartOf="@+id/component_time_relay"
        app:layout_constraintTop_toTopOf="@+id/component_time_relay" />

    <View
        android:id="@+id/conductor_01"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/conductor_color"
        app:layout_constraintBottom_toTopOf="@id/component_time_relay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/k129"
        android:layout_width="20dp"
        android:layout_height="30dp"
        tools:src="@drawable/component_contact"
        app:layout_constraintBottom_toTopOf="@+id/conductor_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/conductor_02"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="@color/conductor_color"
        app:layout_constraintBottom_toTopOf="@id/k129"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>