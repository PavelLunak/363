<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialogHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_dialog_header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogHeaderLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/text_dialog_header" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialogMessageLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/dialogButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_dialog"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:text="@string/no"
            android:textColor="@color/text_dialog_button"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btnYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_dialog"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:text="@string/yes"
            android:textColor="@color/text_dialog_button"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>