<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Component">

        <attr name="cLabel" format="string" />
        <attr name="cDescription" format="string" />

        <attr name="cOrientation" format="enum">
            <enum name="VERTICAL" value="1"/>
            <enum name="HORIZONTAL" value="2"/>
        </attr>

        <attr name="cDirection" format="enum">
            <enum name="NONE" value="-1"/>
            <enum name="LEFT_BOTTOM" value="11"/>
            <enum name="LEFT_CENTER" value="12"/>
            <enum name="LEFT_TOP" value="13"/>
            <enum name="TOP" value="2"/>
            <enum name="RIGHT_BOTTOM" value="31"/>
            <enum name="RIGHT_CENTER" value="32"/>
            <enum name="RIGHT_TOP" value="33"/>
            <enum name="BOTTOM" value="4"/>
        </attr>

        <!--Směr připojení k sousednímu elementu-->
        <attr name="cToLeftOf" format="reference" />
        <attr name="cToRightOf" format="reference" />
        <attr name="cBelow" format="reference" />
        <attr name="cAbove" format="reference" />

    </declare-styleable>

    <declare-styleable name="ComponentContact">

        <!--Popisy pinů u kontaktu-->
        <attr name="cContactLabel_1" format="string" />
        <attr name="cContactLabel_2" format="string" />

    </declare-styleable>
</resources>